{
  "name": "vue-crud",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "preview": "wrangler dev",
    "nuxt:preview": "nuxt preview",
    "update:types": "wrangler types",
    "postinstall": "nuxt prepare",
    "typecheck": "nuxt typecheck",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "create:db": "wrangler d1 create vue-crud-nuxt",
    "migrate:dev": "wrangler d1 migrations apply vue-crud-nuxt --local",
    "migrate": "wrangler d1 migrations apply vue-crud-nuxt --remote",
    "test:db:dev": "wrangler d1 execute vue-crud-nuxt --local --command \"select * from products\";",
    "test:db": "wrangler d1 execute vue-crud-nuxt --remote --command \"select * from products\";",
    "deploy:app": "wrangler deploy",
    "secret:nuxt": "wrangler secret put NUXT_SESSION_PASSWORD",
    "logtail:remote": "wrangler tail vue-crud-nuxt",
    "dev:remote": "wrangler dev --remote",
    "rollback:app": "wrangler rollback",
    "delete:app": "wrangler delete",
    "databases": "wrangler d1 list",
    "create:kv": "wrangler kv namespace create vue-crud-nuxt",
    "kv-workers": "wrangler kv namespace list",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:introspect": "drizzle-kit introspect"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20251230.0",
    "@libsql/client": "^0.15.15",
    "@pinia/nuxt": "^0.11.3",
    "@simplewebauthn/browser": "^13.2.2",
    "@simplewebauthn/server": "^13.2.2",
    "@vueuse/core": "^14.1.0",
    "drizzle-orm": "^0.45.1",
    "h3-zod": "^0.5.3",
    "mande": "^2.0.9",
    "nuxt": "^4.2.2",
    "nuxt-auth-utils": "^0.5.26",
    "pinia": "^3.0.4",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.4",
    "drizzle-kit": "^0.31.8",
    "nitro-cloudflare-dev": "^0.2.2",
    "@iconify/vue": "^5.0.0",
    "@nuxt/devtools": "^3.1.1",
    "@nuxt/test-utils": "^3.21.0",
    "@testing-library/vue": "^8.1.0",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.4.0",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.1",
    "wrangler": "^4.54.0"
  }
}
